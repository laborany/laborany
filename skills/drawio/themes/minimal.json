{
  "name": "minimal",
  "displayName": "极简主题",
  "description": "黑白极简风格，适合正式文档和打印",

  "colors": {
    "primary": "000000",
    "secondary": "333333",
    "accent": "666666",
    "background": "ffffff",
    "surface": "f5f5f5",
    "text": "000000",
    "textLight": "666666",
    "border": "cccccc"
  },

  "fonts": {
    "family": "Microsoft YaHei",
    "size": 12,
    "title": {
      "size": 14,
      "bold": true
    }
  },

  "nodes": {
    "default": {
      "fillColor": "ffffff",
      "strokeColor": "000000",
      "strokeWidth": 1,
      "rounded": 0
    },
    "start": {
      "fillColor": "ffffff",
      "strokeColor": "000000"
    },
    "end": {
      "fillColor": "000000",
      "strokeColor": "000000",
      "fontColor": "ffffff"
    },
    "process": {
      "fillColor": "ffffff",
      "strokeColor": "000000"
    },
    "decision": {
      "fillColor": "f5f5f5",
      "strokeColor": "000000"
    }
  },

  "edges": {
    "default": {
      "strokeColor": "000000",
      "strokeWidth": 1,
      "endArrow": "classic"
    }
  },

  "groups": {
    "default": {
      "fillColor": "f5f5f5",
      "strokeColor": "666666",
      "strokeWidth": 1,
      "dashed": 1
    }
  }
}
