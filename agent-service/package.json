{
  "name": "laborany-agent-service",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "backfill:longterm-audit": "tsx src/scripts/backfill-longterm-audit.ts",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --target=node20 --format=cjs --outfile=dist/bundle.cjs --external:bindings --external:express --define:import.meta.url=__import_meta_url --banner:js=\"const __import_meta_url = require('url').pathToFileURL(__filename).href;\"",
    "build:pkg": "node ../scripts/build-agent-pkg.js win x64 node20-win-x64 dist/laborany-agent",
    "build:pkg:win": "node ../scripts/build-agent-pkg.js win x64 node20-win-x64 dist/laborany-agent",
    "build:pkg:mac": "node ../scripts/build-agent-pkg.js mac x64 node20-macos-x64 dist/laborany-agent-mac",
    "build:pkg:mac-arm64": "node ../scripts/build-agent-pkg.js mac arm64 node20-macos-arm64 dist/laborany-agent-mac",
    "build:pkg:linux": "node ../scripts/build-agent-pkg.js linux x64 node20-linux-x64 dist/laborany-agent-linux",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@larksuiteoapi/node-sdk": "^1.59.0",
    "better-sqlite3": "^12.6.2",
    "cors": "^2.8.5",
    "croner": "^10.0.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "laborany-shared": "file:../shared",
    "nodemailer": "^7.0.13",
    "uuid": "^9.0.1",
    "yaml": "^2.3.4",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.9",
    "@types/uuid": "^9.0.7",
    "@yao-pkg/pkg": "^5.15.0",
    "esbuild": "^0.27.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  }
}
