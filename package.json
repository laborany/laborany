{
  "name": "laborany",
  "version": "0.1.0",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -n api,frontend -c blue,green \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "cd src-api && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:electron": "electron .",
    "build": "npm run build:api && npm run build:frontend",
    "build:api": "cd src-api && npm run build",
    "build:api:win": "cd src-api && npm run build:win",
    "build:api:mac": "cd src-api && npm run build:mac",
    "build:api:linux": "cd src-api && npm run build:linux",
    "build:frontend": "cd frontend && npm run build",
    "bundle:cli": "node scripts/bundle-cli.js",
    "bundle:cli:win": "node scripts/bundle-cli.js win",
    "bundle:cli:mac": "node scripts/bundle-cli.js mac",
    "bundle:cli:linux": "node scripts/bundle-cli.js linux",
    "build:electron": "npm run bundle:cli:win && npm run build && electron-builder --win",
    "build:electron:mac": "npm run bundle:cli:mac && npm run build:api:mac && npm run build:frontend && electron-builder --mac",
    "build:electron:linux": "npm run bundle:cli:linux && npm run build:api:linux && npm run build:frontend && electron-builder --linux",
    "install:all": "npm install && cd src-api && npm install && cd ../frontend && npm install"
  },
  "build": {
    "appId": "ai.thinkany.laborany",
    "productName": "LaborAny",
    "directories": {
      "output": "release"
    },
    "files": [
      "electron/**/*",
      "frontend/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "frontend/dist",
        "to": "api/frontend"
      },
      {
        "from": "skills",
        "to": "skills"
      },
      {
        "from": "workflows",
        "to": "workflows"
      },
      {
        "from": ".env.example",
        "to": ".env.example"
      },
      {
        "from": "CLAUDE.md",
        "to": "CLAUDE.md"
      },
      {
        "from": "cli-bundle",
        "to": "cli-bundle",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src-tauri/icons/icon.ico",
      "signAndEditExecutable": false,
      "extraResources": [
        {
          "from": "src-api/dist/laborany-api.exe",
          "to": "api/laborany-api.exe"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "src-tauri/icons/icon.icns",
      "extraResources": [
        {
          "from": "src-api/dist/laborany-api-mac",
          "to": "api/laborany-api"
        }
      ]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "src-tauri/icons/icon.png",
      "category": "Utility",
      "extraResources": [
        {
          "from": "src-api/dist/laborany-api-linux",
          "to": "api/laborany-api"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LaborAny"
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0"
  }
}
